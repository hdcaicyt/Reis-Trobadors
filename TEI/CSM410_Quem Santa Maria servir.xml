            <lg type="cantiga" subtype="refrán" style="amor" unisonancia="singular" isometrismo="isométrico" isoestrofismo="isoestrófico" asonancia="consonante" met="6x8" rhyme="abbaCC">
                <head type="rúbrica">Prologo das Cantigas das cinco Festas de Santa Maria.</head> 
                
                <lg n="1">
                    <l xml:id="L1">E porque eu gran sabor <rhyme label="ey">ey</rhyme></l>
                    <l xml:id="L2">de a servir, servi-la-<rhyme label="ey">ey</rhyme>,</l>
                    <l xml:id="L3">e quanto poder punnar<rhyme label="ey">ey</rhyme></l>
                    <l xml:id="L4">d'os seus miragres descobr<rhyme label="ir">ir</rhyme>.</l>
                    <l xml:id="L5"  rendition="estribillo">Quem Santa Maria serv<rhyme label="ir">ir</rhyme>,</l>
                    <l xml:id="L6" rendition="estribillo">non pode no seu ben fal<rhyme label="ir">ir</rhyme>.</l>
                </lg>
                <lg n="2">    
                    <l xml:id="L7">Pero direi ant'en bon s<rhyme label="on">on</rhyme></l>
                    <l xml:id="L8">das sas çinque festas, que s<rhyme label="on">on</rhyme></l>
                    <l xml:id="L9">mui nobres, e direi raz<rhyme label="on">on</rhyme></l>
