                <head type="rúbrica">Esta é de loor de Santa Maria, do departimento
                    que á entre Ave e Eva.</head> 

                <lg n="1">
                    <l xml:id="L1">Ca Eva nos toll<rhyme label="eu">eu</rhyme></l>
                    <l xml:id="L2">o Parays' e D<rhyme label="eus">eus</rhyme>,</l>
                    <l xml:id="L3">Ave nos y met<rhyme label="eu">eu</rhyme>;</l>
                    <l xml:id="L4">porend', amigos m<rhyme label="eus">eus</rhyme>:</l>
                    <l xml:id="L5" rendition="estribillo">Entre Av' e <rhyme label="eva">Eva</rhyme></l>
                    <l xml:id="L6" rendition="estribillo">gran departiment' <rhyme label="a">á</rhyme>.</l>
            </lg>
            
                <lg n="2">
                    <l xml:id="L7">Eva nos foi deit<rhyme label="ar">ar</rhyme></l>
                    <l xml:id="L8">do dem' en sa prij<rhyme label="on">on</rhyme>,</l>
                    <l xml:id="L9">e Ave en sac<rhyme label="ar">ar</rhyme>;</l>
                    <l xml:id="L10">e por esta raz<rhyme label="on">on</rhyme>:</l>
                    <l xml:id="L11" rendition="estribillo">Entre Av' e <rhyme label="eva">Eva</rhyme></l>
                    <l xml:id="L12" rendition="estribillo">gran departiment' <rhyme label="a">á</rhyme>.</l>
                </lg>
            
                <lg n="3">
                    <l xml:id="L13">Eva nos fez perd<rhyme label="er">er</rhyme></l>
                    <l xml:id="L14">amor de Deus e b<rhyme label="en">en</rhyme>,</l>
                    <l xml:id="L15">e pois Ave av<rhyme label="er">er</rhyme></l>
                    <l xml:id="L16">no-lo fez; e por<rhyme label="en">en</rhyme>:</l>
                    <l xml:id="L17" rendition="estribillo">Entre Av' e <rhyme label="eva">Eva</rhyme></l>
                    <l xml:id="L18" rendition="estribillo">gran departiment' <rhyme label="a">á</rhyme>.</l>
                </lg>
            
                <lg n="4">
                    <l xml:id="L19">Eva nos ensserr<rhyme label="ou">ou</rhyme></l>
                    <l xml:id="L20">os çeos sen ch<rhyme label="ave">ave</rhyme>,</l>
                    <l xml:id="L21">e Maria brit<rhyme label="ou">ou</rhyme></l>
                    <l xml:id="L22">as portas per <rhyme label="ave">Ave</rhyme>.</l>
                    <l xml:id="L23" rendition="estribillo">Entre Av' e <rhyme label="eva">Eva</rhyme></l>
                    <l xml:id="L24" rendition="estribillo">gran departiment' <rhyme label="a">á</rhyme>.</l>
                </lg>

