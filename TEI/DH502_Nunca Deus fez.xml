        <body>
            
            <lg type="cantiga" subtype="maestría" style="amor" unisonancia="singular" isometrismo="isométrico" 
                isoestrofismo="isoestrófico" asonancia="consonante" met="6x10" rhyme="aaabab">
                
                <lg n="1">  
                    <l xml:id="L1">Nunca Deus fez tal coita qual eu <rhyme label="ei">ei</rhyme></l>                   
                    <l xml:id="L2">con a ren do mundo que máis am<rhyme label="ei">ei</rhyme>,</l>
                    <l xml:id="L3">e des que a vi e am’ e amar<rhyme label="ei">ei</rhyme>,</l>
                    <l xml:id="L4">noutro dia quando a fui ve<rhyme label="er">er</rhyme></l>
                    <l xml:id="L5">o Demo lev’a ren que lh’eu fal<rhyme label="ei">ei</rhyme>,</l>
                    <l xml:id="L6">de quanto lh’ante cuidara diz<rhyme label="er">er</rhyme>.</l>             
            </lg>
            
                <lg n="2">  
                    <l xml:id="L7">Mais tanto, que me d’ant’ela quit<rhyme label="ei">ei</rhyme>.</l>
                    <l xml:id="L8">do que ante cuidava me nembr<rhyme label="ei">ei</rhyme>,</l>
                    <l xml:id="L9">que nulha cousa ende non mingu<rhyme label="ei">ei</rhyme>,</l>
                    <l xml:id="L10">mais quand’er quis tornar pola ve<rhyme label="er">er</rhyme></l>
                    <l xml:id="L11">a lho dizer, e me ben esforç<rhyme label="ei">ei</rhyme>,</l>                         
                    <l xml:id="L12">de lho contar sol non ouvi pod<rhyme label="er">er</rhyme>.</l>
                </lg>
                
            </lg>
