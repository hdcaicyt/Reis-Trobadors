            <lg type="cantiga" subtype="refrán" style="mariana" unisonancia="singular" isometrismo="isométrico" isoestrofismo="isoestrófico" asonancia="consonante" met="6x8" rhyme="abbaCC">
                <head type="rúbrica">Esta é de loor de Santa Maria.</head>
                             
                <lg n="1" >
                    <l xml:id="L1">Dereit' é de loores d<rhyme label="ar">ar</rhyme></l>
                    <l xml:id="L2">a aquela que sempre d<rhyme label="a">á</rhyme></l>
                    <l xml:id="L3">seu ben que nunca falir<rhyme label="a">á</rhyme>;</l>
                    <l xml:id="L4">e porend', a[s]se Deus m' amp<rhyme label="ar">ar</rhyme>:</l>

                    <l xml:id="L5" rendition="estribillo">Tod' ome deve dar lo<rhyme label="or">or</rhyme>
                    <l xml:id="L6" rendition="estribillo">aa Madre do Salvad<rhyme label="or">or</rhyme>.</l>
                </lg>
                
                <lg n="2" >
                    <l xml:id="L7">E pois nos dá tan nobre d<rhyme label="on">on</rhyme></l>
                    <l xml:id="L8">que nos faz o amor de D<rhyme label="eus">eus</rhyme></l>
                    <l xml:id="L9">aver e que sejamos s<rhyme label="eus">eus</rhyme>;</l>
                    <l xml:id="L10">porend', assi Deus me perd<rhyme label="on">on</rhyme>:</l>

                    <l xml:id="L11" rendition="estribillo">Tod' ome deve dar lo<rhyme label="or">or</rhyme>
                    <l xml:id="L12" rendition="estribillo">aa Madre do Salvad<rhyme label="or">or</rhyme>.</l>
                </lg>
                
                <lg n="3" >
                    <l xml:id="L13">E pois tan poderosa <rhyme label="e">é</rhyme></l>
                    <l xml:id="L14">e con Deus á tan gran pod<rhyme label="er">er</rhyme></l>
                    <l xml:id="L15">que quanto quer pode faz<rhyme label="er">er</rhyme>;</l>
                    <l xml:id="L16">por aquesto, per bõa f<rhyme label="e">e</rhyme>:</l>
                </lg>
                <lg>
                    <l xml:id="L17" rendition="estribillo">Tod' ome deve dar lo<rhyme label="or">or</rhyme>
                    <l xml:id="L18" rendition="estribillo">aa Madre do Salvad<rhyme label="or">or</rhyme>.</l>
                </lg>
            </lg>
