                <lg type="cantiga" subtype="refrán" style="mariana" unisonancia="singular" isometrismo="isométrico" isoestrofismo="isoestrófica" asonancia="consonante" met="6x8" rhyme="abbaCC">
                    <head type="rúbrica">Esta é de loor de Santa Maria.</head>
                    
                    <lg n="1">
                        <l xml:id="L3">Dereit'é de loores d<rhyme label="ar">ar</rhyme></l>
                        <l xml:id="L4">a aquela que sempre d<rhyme label="a">á</rhyme></l>
                        <l xml:id="L5">seu ben que nunca falir<rhyme label="a">á</rhyme>;</l>
                        <l xml:id="L6">e porend', a[s]se Deus m'amp<rhyme label="ar">ar</rhyme>:</l>
                        <l xml:id="L7" rendition="estribillo">Tod'ome deve dar lo<rhyme label="or">or</rhyme></l>
                        <l xml:id="L8" rendition="estribillo">aa Madre do Salvad<rhyme label="or">or</rhyme>.</l>
                    </lg>
                    <lg n="2">    
                        <l xml:id="L9">E pois nos dá tan nobre d<rhyme label="on">on</rhyme></l>
                        <l xml:id="L10">que nos faz o amor de D<rhyme label="eus">eus</rhyme></l>
                        <l xml:id="L11">aver e que sejamos s<rhyme label="eus">eus</rhyme>;</l>
                        <l xml:id="L12">porend', assi Deus me perd<rhyme label="on">on</rhyme>:</l>
                        <l xml:id="L13" rendition="estribillo">Tod'ome deve dar lo<rhyme label="or">or</rhyme></l>
                        <l xml:id="L14" rendition="estribillo">aa Madre do Salvad<rhyme label="or">or</rhyme>.</l>
                    </lg>
                    <lg n="3">
                        <l xml:id="L15">E pois tan poderosa <rhyme label="e">é</rhyme></l>
                        <l xml:id="L16">e con Deus á tan gran pod<rhyme label="er">er</rhyme></l>
                        <l xml:id="L17">que quanto quer pode faz<rhyme label="er">er</rhyme>;</l>
                        <l xml:id="L18">por aquesto, per bõa f<rhyme label="e">e</rhyme>:</l>
                        <l xml:id="L19" rendition="estribillo">Tod'ome deve dar lo<rhyme label="or">or</rhyme></l>
                        <l xml:id="L20" rendition="estribillo">aa Madre do Salvad<rhyme label="or">or</rhyme>.</l>
                    </lg>
                </lg>
