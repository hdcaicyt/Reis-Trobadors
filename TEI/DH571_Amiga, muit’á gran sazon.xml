                    <lg n="1">
                        <l xml:id="L1">Amiga, muit’á gran saz<rhyme label="on">on</rhyme>,</l>
                        <l xml:id="L2">que se foi d’aqui con el-r<rhyme label="ei">ei</rhyme></l>
                        <l xml:id="L3">meu amigo, mais ja cuid<rhyme label="ei">ei</rhyme></l>
                        <l xml:id="L4">mil vezes  no meu coraç<rhyme label="on">on</rhyme></l>
                        <l xml:id="L5" rendition="estribillo">que algur morreu con pes<rhyme label="ar">ar</rhyme>,</l>
                        <l xml:id="L6" rendition="estribillo">pois non tornou migo fal<rhyme label="ar" >ar</rhyme>.</l>
                    </lg>
                    <lg n="2">
                        <l xml:id="L7">Porque tarda tan muito l<rhyme label="a">á</rhyme>,</l>
                        <l xml:id="L8">e nunca me tornou ve<rhyme label="er">er</rhyme>,</l>
                        <l xml:id="L9">amiga, s’i veja praz<rhyme label="er">er</rhyme>,</l>
                        <l xml:id="L10">mais de mil vezes cuidei j<rhyme label="a">a</rhyme></l>
                        <l xml:id="L11"  rendition="estribillo">que algur morreu con pes<rhyme label="ar">ar</rhyme>,</l>
                        <l xml:id="L12"  rendition="estribillo">pois non tornou migo fal<rhyme label="ar">ar</rhyme>.</l>
                    </lg>
                    <lg n="3">
                        <l xml:id="L13">Amiga, o coraçon s<rhyme label="eu">eu</rhyme></l> 
                        <l xml:id="L14">era de tornar ced’aqu<rhyme label="i">i</rhyme></l>
                        <l xml:id="L15">u viss’os meus olhos en m<rhyme label="i">i</rhyme>n,</l>
                        <l xml:id="L16">e por én mil vezes cuid’<rhyme label="eu">eu</rhyme></l>
                        <l xml:id="L17"  rendition="estribillo">que algur morreu con pes<rhyme label="ar">ar</rhyme>,</l>
                        <l xml:id="L18"  rendition="estribillo">pois non tornou migo fal<rhyme label="ar">ar</rhyme>.</l>
                    </lg>
