        <body>
            
            <lg type="cantiga" subtype="refrán" style="escarnio" unisonancia="singular" isometrismo="isométrico" 
                isoestrofismo="isoestrófico" asonancia="consonante" met="6x7" rhyme="aaabaB">
                
                <lg n="1"> 
                    <l xml:id="L1">Mui melhor ca m’ eu gov<rhyme label="erno">erno</rhyme>,</l>
                    <l xml:id="L2">o que revolv’ o cad<rhyme label="erno">erno</rhyme>,</l>
                    <l xml:id="L3">governas’, e d’ inv<rhyme label="erno">erno</rhyme>,</l>
                    <l xml:id="L4">o vesten ben de br<rhyme label="ou">ou</rhyme>,</l>
                    <l xml:id="L5" rendition="estribillo">e jaz eno inf<rhyme label="erno">erno</rhyme>,</l>
                    <l xml:id="L6" rendition="estribillo">o que o guaanh<rhyme label="ou">ou</rhyme>.</l>
            </lg>
            
                <lg n="2"> 
                    <l xml:id="L7">Andan o seu com<rhyme label="endo">endo</rhyme>,</l> 
                    <l xml:id="L8">e malo despend<rhyme label="endo">endo</rhyme>,</l>
                    <l xml:id="L9">e baratas faz<rhyme label="endo">endo</rhyme>,</l>
                    <l xml:id="L10">que el nunca cuid<rhyme label="ou">ou</rhyme>,</l>
                    <l xml:id="L11" rendition="estribillo">e jaz no fog’ ard<rhyme label="endo">endo</rhyme>,</l>
                    <l xml:id="L12" rendition="estribillo">o que o guaanh<rhyme label="ou">ou</rhyme>.</l>
                </lg>
            
                <lg n="3"> 
                    <l xml:id="L13">O que seu, mal pec<rhyme label="ado">ado</rhyme>,</l>
                    <l xml:id="L14">foi, é desbarat<rhyme label="ado">ado</rhyme>,</l>
                    <l xml:id="L15">e anda én guis<rhyme label="ado">ado</rhyme></l>
                    <l xml:id="L16">quen sempr’ o seu guard<rhyme label="ou">ou</rhyme>,</l>
                    <l xml:id="L17" rendition="estribillo">e jaz atorment<rhyme label="ado">ado</rhyme>,</l>
                    <l xml:id="L18" rendition="estribillo">o que o guaanh<rhyme label="ou">ou</rhyme>.</l>
                </lg>

            </lg>
